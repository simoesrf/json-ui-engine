{
    "$id": "http://example.com/fstab",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Persons",
    "properties": {
        "name": {
            "type": "string",
            "title": "Name",
            "default": "Manuel",
            "minLength": 3,
            "maxLength": 10
        },
        "age": {
            "type": "integer",
            "title": "Age",
            "description": "Your age in years",
            "minimum": 0,
            "maximum": 100
        },
        "friends": {
            "title": "Friends",
            "type": "array",
            "items": {
                "type": "object",
                "title": "My title",
                "properties": {
                    "name": {
                        "type": "string",
                        "title": "Name",
                        "minLength": 3,
                        "maxLenth": 100
                    },
                    "age": {
                        "type": "integer",
                        "title": "Age",
                        "description": "Your age in years",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "gender": {
                        "type": "string",
                        "enum": [
                            "m",
                            "f"
                        ]
                    }
                },
                "additionalProperties": true
            }
        },
        "gender": {
            "type": "string",
            "enum": [
                "m",
                "f"
            ]
        },
        "address": {
            "type": "object",
            "title": "My nested title",
            "description": "My nested description",
            "properties": {
                "country": {
                    "type": "string",
                    "enum": [
                        "Portugal",
                        "Spain"
                    ]
                },
                "city": {
                    "type": "string"
                }
            }
        },
        "test": {
            "title": "One of example",
            "__ui__": {
                "widget": "button_selection_widget",
                "options": [
                    {
                        "id": "option1",
                        "label": "Select a string"
                    },
                    {
                        "id": "option2",
                        "label": "Select a number"
                    }
                ]
            },
            "oneOf": [
                {
                    "title": "Insert any string.",
                    "describe": "Any string will fit perfect",
                    "type": "string"
                },
                {
                    "title": "Insert any number.",
                    "describe": "Any number will fit perfect",
                    "type": "number"
                }
            ]
        },
        "test2": {
            "title": "One of example",
            "__ui__": {
                "widget": "button_selection_widget",
                "options": [
                    {
                        "label": "Select without address"
                    },
                    {
                        "label": "Select with address"
                    }
                ]
            },
            "oneOf": [
                {
                    "type": "object",
                    "title": "My nested title",
                    "description": "My nested description",
                    "properties": {
                        "__id__": { "const": "option1" },
                        "country": {
                            "type": "string",
                            "enum": [
                                "Portugal",
                                "Spain"
                            ]
                        },
                        "city": {
                            "type": "string"
                        }
                    }
                },
                {
                    "type": "object",
                    "title": "My nested title",
                    "description": "My nested description",
                    "properties": {
                        "__id__": { "const": "option2" },
                        "address": {
                            "title": "adress",
                            "type": "string"
                        },
                        "country": {
                            "title": "Country",
                            "type": "string",
                            "enum": [
                                "Portugal",
                                "Spain"
                            ]
                        },
                        "city": {
                            "title": "City",
                            "type": "string"
                        }
                    }
                }
            ]
        }
    },
    "additionalProperties": true
}